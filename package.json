{
  "name": "xiaohui",
  "version": "0.1.0",
  "description": "",
  "main": "/src/main.js",
  "scripts": {
    "test": "mocha",
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "build": {
    "productName": "Xiaohui-Manage",
    "appId": "com.huirui-team.Xiaohui-Manage",
    "copyright": "Huirui-Team",
    "directories": {
      "output": "app/dist"
    },
    "files": [
      "src/**/*"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icon.ico",
      "uninstallerIcon": "./build/icon.ico",
      "installerHeaderIcon": "./build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Xiaohui Manage"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluecloudi/Xiaohui-Manage.git"
  },
  "author": "huirui-team",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/bluecloudi/Xiaohui-Manage/issues"
  },
  "homepage": "https://github.com/bluecloudi/Xiaohui-Manage#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "del": "^5.1.0",
    "electron": "^7.0.1",
    "electron-builder": "^21.2.0",
    "gulp": "^4.0.2",
    "gulp-stylus": "^2.7.0",
    "mocha": "^6.2.2",
    "nib": "^1.1.2",
    "spectron": "^9.0.0",
    "stylus": "^0.54.7"
  }
}
